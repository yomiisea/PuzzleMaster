<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Versus">
    <RelativeLayout

        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/fondo"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:title=""
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />




    <LinearLayout
        android:id="@+id/rompeTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:rotation="180">

        <!-- Primera fila del rompecabezas superior -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvbA"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#FF88B0"
                android:textColor="#FFFFFF"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvbX"
                android:text="2"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#BADC93"
                android:textColor="#000000"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvbC"
                android:text="3"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#CA6889"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Segunda fila del rompecabezas superior -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvbD"
                android:text="4"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#88A6FF"
                android:textColor="#FFFFFF"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvbE"
                android:text="5"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#BDDAFF"
                android:textColor="#000000"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvbF"
                android:text="6"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#6A8ABB"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Tercera fila del rompecabezas superior -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvbG"
                android:text="7"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#FFD77B"
                android:textColor="#FFFFFF"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvbH"
                android:text="8"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#FFEDB5"
                android:textColor="#000000"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textSize="30sp"
                android:id="@+id/tvbI"
                android:text=""
                android:background="#C89B51"/>
        </LinearLayout>
    </LinearLayout>
        <TextView
            android:rotation="180"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUGADOR 2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="-60dp"
            android:layout_above="@+id/rompeTop"
            android:layout_centerHorizontal="true"
            />
    <TextView
        android:id="@+id/tvGameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versus"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/rompeTop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="24sp"
        android:background="#B0FFFFFF"
        android:padding="2dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/tvGameTitle"

        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/rompeBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:layout_weight="1">

        <!-- Primera fila del rompecabezas inferior -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvA"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#FF88B0"
                android:textColor="#FFFFFF"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvX"
                android:text="2"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#BEDE99"
                android:textColor="#000000"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvC"
                android:text="3"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#CA6889"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Segunda fila del rompecabezas inferior -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvD"
                android:text="4"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#88A6FF"
                android:textColor="#FFFFFF"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvE"
                android:text="5"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#BDDAFF"
                android:textColor="#000000"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvF"
                android:text="6"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#6A8ABB"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Tercera fila del rompecabezas inferior -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvG"
                android:text="7"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#FFD77B"
                android:textColor="#FFFFFF"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvH"
                android:text="8"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#FFEDB5"
                android:textColor="#000000"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/tvI"
                android:text=""
                android:gravity="center"
                android:textSize="30sp"
                android:background="#C89B51"/>
        </LinearLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUGADOR 1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/rompeBottom"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <!-- Botones de control -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/botones"
        android:layout_below="@+id/tvTimer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btDesordena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comenzar"
            android:textSize="23sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#92417B"
            android:layout_marginRight="10dp"/>

    </LinearLayout>


</RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header" />
</androidx.drawerlayout.widget.DrawerLayout>